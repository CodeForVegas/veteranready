{{!< default}}
<style>
    .thumbnail {
        width: 100%;
        height: 450px;
        overflow: auto;
    }
    .thumbnail img {
        margin-top: 1em;
    }
    .center-content {
        margin:auto;
        padding:2%;
        position: absolute;
        top: 0; left: 0; bottom: 0; right: 0;
        text-align: center;
    }
    .bottom-align {
        position: absolute;
        bottom: 0;
        left: 50%;
        margin-left: -60px;
        width: 120px;
        margin-bottom: 1em;
    }
</style>
<div class="container">
  <div class="jumbotron">
    <div class="container text-center" style="margin-top:-35px; margin-bottom:-30px">
	  <h2 class="text-center">Showing {{data.agency.length}} Community Partners</h2>
    </div>
  </div>
</div>
<div class="container">
	<div class="main">
        <div class="row">
            {{#each data.agency}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <h4 class="text-center">{{topic}}</h4>
                    {{#if contactPhoto}}
                    <img src="{{cloudinaryUrl contactPhoto width='175' height='175' crop='fit'}}" alt="{{contactName}}">
                    {{/if}}
                    <div class="caption">
                        <h3 class="text-center">{{name}}</h3>
                    </div>
                    <div class="center-content">
                        <button type="button" class="bottom-align btn btn-primary btn-lg">More Info</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
	</div><!-- /main -->
</div><!-- /container -->
<script src="/js/jquery/jquery-1.11.3.min.js"></script>
